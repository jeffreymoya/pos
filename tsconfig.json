{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution":"node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "",
    "baseUrl": "src",
    "paths": {
      "test-utils": ["./common/utilities/test-utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
