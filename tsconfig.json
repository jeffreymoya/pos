{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react-native",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@wayloc/types/*": [
        "src/types/*"
      ],
      "@redux/*": [
        "src/redux/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ]
    },
    "types": ["google.maps"]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "extends": "expo/tsconfig.base",
  "typeRoots": [
    "src/types",
    "node_modules/@types"
  ],
}
