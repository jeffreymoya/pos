{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "./build",
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "paths": {
      "@server/*": [
        "src/*"
      ],
      "@tests/*": [
        "__tests__/*"
      ],
      "@core/*": [
        "src/components/core/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}